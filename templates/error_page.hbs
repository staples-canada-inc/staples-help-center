<div class="search-wrapper">
    <div class="container">
        <div class="row mb-5 py-5 justify-content-center">
            {{search submit=false instant=settings.instant_search class='search search-full w-75 my-5'}}
        </div>
    </div>
</div>
<div class="container py-3 my-5">
    <div class="error-page">
        <h1>{{t 'oops'}}</h1>
        {{#is error 'unauthorized'}}
        <h2>{{link 'sign_in'}}</h2>
        {{/is}}

        {{#is error 'forbidden'}}
        <h2>{{t 'not_authorized'}}</h2>
        {{/is}}

        {{#is error 'not_found'}}
        <h2>{{t 'nonexistent_page'}}</h2>
        <p>{{t 'mistyped_address_or_moved_page'}}</p>
        {{/is}}

        {{#link 'help_center'}}
        {{t 'back_to_homepage'}}
        {{/link}}
    </div>
</div>