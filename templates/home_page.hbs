<div class="search-wrapper">
    <div class="container">
        <div class="row mb-5 py-5 justify-content-center">
            {{search submit=false instant=settings.instant_search class='search search-full w-75 my-5'}}
        </div>
    </div>
</div>
<div class="container py-5 my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-4">
            <!-- Category List-->
            <div class="list-group list-group-flush" id="list-tab" role="tablist">
                {{#each categories}}
                <a class="list-group-item list-group-item-action cat-{{@index}}" data-toggle="list" href="#category-{{id}}" role="tab" aria-controls="#category-{{id}}">{{name}}</a>
                {{/each}}
            </div>
            <!-- Promoted Articles -->
            {{#if promoted_articles}}
            <div class="articles mt-5">
                <h4>{{dc 'popular_articles'}}</h4>
                {{#each promoted_articles}}
                <a href="{{url}}" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 text-secondary">{{excerpt title characters=60}}{{#if internal}}<span class="icon-lock" title="{{t 'internal'}}"></span>{{/if}}</h5>
                    </div>
                    <p class="text-small text-tertiary">{{excerpt body characters=100}}</p>
                </a>
                {{/each}}
            </div>
            {{/if}}
        </div>

        <!-- Main Content -->
        <!-- Section / Article Lists -->
        <div class="col-8">
            <div class="tab-content">
                <!-- Foreach category list the sections -->
                {{#each categories}}
                <div class="tab-pane fade cat-{{@index}}" id="category-{{id}}" role="tabpanel" aria-labelledby="#category-{{id}}">
                    {{#each sections}}
                    <!-- Display Section Name -->
                    <h3>{{name}}</h3>
                    <div class="section" id="section-{{id}}">
                        <!-- Foreach section list the articles -->
                        <ul class="list-unstyled mb-4">
                            {{#each articles}}
                            <li class="article mb-2"><a href="{{url}}">{{title}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

