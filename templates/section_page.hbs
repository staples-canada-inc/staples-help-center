<div class="bg-lightest-grey py-3 mb-5 ">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-12 col-md-9 mb-3 mb-md-0">
                {{breadcrumbs}}
            </div>
            <div class="col-12 col-md-3">
                {{search scoped=settings.scoped_kb_search submit=false class='nav-search ml-md-auto w-90'}}
            </div>
        </div>
    </div>
</div>
<div class="container py-5 my-5">
    <section class="section-content">
        <header class="page-header">
            <h1>
                {{section.name}}
            </h1>
            {{#if settings.show_follow_section}}
            {{subscribe}}
            {{/if}}
            {{#if section.description}}
            <p class="page-header-description">{{section.description}}</p>
            {{/if}}
        </header>


        {{#if section.articles}}
        <ul class="article-list">
            {{#each section.articles}}
            <li class="article-list-item {{#if promoted}} article-promoted{{/if}}">
                {{#if promoted}}
                <span data-title="{{t 'promoted'}}" class="icon-star"></span>
                {{/if}}
                <a href="{{url}}" class="article-list-link">{{title}}</a>
                {{#if internal}}
                <span class="icon-lock" title="{{t 'internal'}}"></span>
                {{/if}}
            </li>
            {{/each}}
        </ul>
        {{else}}
        <i class="section-empty">
            <a href="{{section.url}}">{{t 'empty'}}</a>
        </i>
        {{/if}}

        {{pagination}}
    </section>
</div>
</div>